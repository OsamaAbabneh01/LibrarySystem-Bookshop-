	"item": [
		{
			"name": "Add New bookshop",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"let newID = pm.variables.replaceIn('{{$randomInt}}');\r",
							"let newName = pm.variables.replaceIn('{{$randomFullName}}');\r",
							"let newName2 = pm.variables.replaceIn('{{$randomColor}}');\r",
							"let newCity = pm.variables.replaceIn('{{$randomCity}}');\r",
							"let newContactNumber = pm.variables.replaceIn('{{$randomPhoneNumber}}');\r",
							"let newEmail = pm.variables.replaceIn('{{$randomEmail}}');\r",
							"let newAddress = pm.variables.replaceIn('{{$randomStreetAddress}}');\r",
							"\r",
							"pm.collectionVariables.set(\"theID\", newID);\r",
							"pm.collectionVariables.set(\"theName\", newName + \" \" + newName2);\r",
							"pm.collectionVariables.set(\"theCity\", newCity);\r",
							"pm.collectionVariables.set(\"theEmail\", newEmail);\r",
							"pm.collectionVariables.set(\"theAddress\", newAddress);\r",
							"pm.collectionVariables.set(\"theContactNumber\", newContactNumber);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"id\": {{theID}},\r\n    \"name\": \"{{theName}}\",\r\n    \"city\": \"{{theCity}}\",\r\n    \"contactNumber\": \"{{theContactNumber}}\",\r\n    \"email\": \"{{theEmail}}\",\r\n    \"address\": \"{{theAddress}}\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:3000/bookshop",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"bookshop"
					]
				}
			},
			"response": []
		},
