	"item": [
		{
			"name": "Add New Book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let newID = pm.variables.replaceIn('{{$randomInt}}');\r",
							"let newName = pm.variables.replaceIn('{{$randomFullName}}');\r",
							"let newName2 = pm.variables.replaceIn('{{$randomColor}}');\r",
							"let newTitle = pm.variables.replaceIn('{{$randomStreetAddress}}');\r",
							"\r",
							"\r",
							"pm.collectionVariables.set(\"theID\", newID);\r",
							"pm.collectionVariables.set(\"theName\", newName + \" \" + newName2);\r",
							"pm.collectionVariables.set(\"theTitle\", newTitle);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"id\":{{theID}},\r\n    \"name\":\"{{theName}}\",\r\n    \"title\":\"{{theTitle}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:3000/books",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"books"
					]
				}
			},
			"response": []
